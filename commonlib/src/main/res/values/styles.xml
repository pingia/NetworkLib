<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 对话框样式-->
    <style name="style_dialog" parent="android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/white_corner_bg</item>    <!--TODO 对话框背景图或颜色-->
        <item name="android:windowSoftInputMode">stateAlwaysHidden|adjustPan</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden|adjustPan</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="DialogTitleText">
        <item name="android:textColor">@color/pure_black</item>
        <item name="android:textSize">@dimen/text_size_32</item>
    </style>

    <style name="DialogMsgText">
        <item name="android:textColor">@color/pure_black</item>
        <item name="android:textSize">@dimen/text_size_30</item>
    </style>

    <!--TODO 对话框确定按钮颜色 -->
    <style name="DialogBtnText">
        <item name="android:textColor">#007aff</item>
        <item name="android:textSize">@dimen/text_size_32</item>
    </style>
</resources>